try:
    nome = input('qual o nome do aluno? ')
    n1 = float(input('qual a primeira nota do aluno? '))
    n2 = float(input('qual a segunda nota do aluno? '))
    n3 = float(input('qual a terceira nota do aluno? '))
    med = (n1 + n2 + n3) / 3
    if med >= 6:
        print(f'o aluno {nome} passou! (media:{med:.2f})')
    elif med < 6:
        print(f'o aluno {nome} não passou. (media:{med:.2f})')
    elif med > 10:
        print('adicione notas até 10.')
except ValueError:
    print("adicione um número válido.")
