kg = float(input("qual seu peso? (em KG) "))
m = float(input("qual sua altura (em Metros) "))
imc = kg / (m*2)
if imc < 18.5:
     print(f"O seu IMC é abaixo do ideal: {imc:.2f}")
elif imc >= 18.5 and imc < 25:
     print(f"Seu IMC é ideal: {imc:2f}")
elif imc > 25:
     print(f"O seu IMC é maior do que o ideal: {imc:.2f}")
if kg > 1000:
    print("MDSSSSSS UM MUTANTE!")
